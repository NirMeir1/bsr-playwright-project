{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@gen/*": ["src/gen/*"]
    }
  },
  "include": ["src/**/*.ts", "src/gen/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}